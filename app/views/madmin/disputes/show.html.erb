<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= link_to "← Back to Disputes", madmin_disputes_path, class: "text-blue-600 hover:text-blue-800 mb-4 inline-block" %>

  <div class="bg-white shadow-sm rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">
        Dispute #<%= @record.id %>
      </h1>
      <p class="text-sm text-gray-600 mt-1">
        Status: <span class="px-2 py-1 rounded-full text-xs font-semibold <%= @record.status == 'open' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
          <%= @record.status.humanize %>
        </span>
      </p>
    </div>

    <!-- Trade Information -->
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 mb-3">Trade Information</h2>
      <dl class="grid grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Trade ID</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= link_to "##{@record.trade.id}", madmin_trade_path(@record.trade), class: "text-blue-600 hover:text-blue-800" %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Trade State</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @record.trade.state.humanize %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Item</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @record.trade.item&.name || 'N/A' %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Price</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@record.trade.price_cents / 100.0) %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Buyer</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @record.trade.buyer&.email || @record.trade.buyer_email %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Seller</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @record.trade.seller.email %></dd>
        </div>
      </dl>
    </div>

    <!-- Dispute Details -->
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 mb-3">Dispute Details</h2>
      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Reason</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @record.reason %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Opened By</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @record.opened_by&.email || 'System' %> on <%= @record.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
        <% if @record.rejection_category = @record.trade.rejection_category %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Rejection Category</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @record.trade.rejection_category.humanize %></dd>
          </div>
        <% end %>
      </dl>
    </div>

    <!-- Evidence -->
    <% if @record.trade.evidences.any? %>
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900 mb-3">Evidence</h2>
        <div class="space-y-4">
          <% @record.trade.evidences.order(created_at: :asc).each do |evidence| %>
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900">
                    <%= evidence.user.email %>
                    <span class="text-gray-500 font-normal">
                      (<%= evidence.user.id == @record.trade.buyer_id ? 'Buyer' : 'Seller' %>)
                    </span>
                  </p>
                  <p class="text-sm text-gray-600 mt-1"><%= evidence.description %></p>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= evidence.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Resolution Actions -->
    <% if @record.status != 'resolved' && @record.trade.disputed? %>
      <div class="px-6 py-6 bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Resolution Actions</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- Refund Buyer (Full) -->
          <div class="bg-white rounded-lg border-2 border-blue-200 p-4">
            <h3 class="font-semibold text-gray-900 mb-2">Refund Buyer (100%)</h3>
            <p class="text-sm text-gray-600 mb-4">
              Full refund to buyer: <%= number_to_currency(@record.trade.calculate_refund_amount / 100.0) %>
            </p>
            <%= button_to "Refund Buyer",
                         resolve_refund_madmin_dispute_path(@record),
                         method: :post,
                         data: { turbo_confirm: "Are you sure you want to issue a full refund to the buyer?" },
                         class: "w-full bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm font-medium" %>
          </div>

          <!-- Release to Seller (Full) -->
          <div class="bg-white rounded-lg border-2 border-green-200 p-4">
            <h3 class="font-semibold text-gray-900 mb-2">Release to Seller (100%)</h3>
            <p class="text-sm text-gray-600 mb-4">
              Full payout to seller: <%= number_to_currency(TradeService.calculate_payout_amount(@record.trade) / 100.0) %>
            </p>
            <%= button_to "Release to Seller",
                         resolve_release_madmin_dispute_path(@record),
                         method: :post,
                         data: { turbo_confirm: "Are you sure you want to release funds to the seller?" },
                         class: "w-full bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 text-sm font-medium" %>
          </div>

          <!-- Split Decision -->
          <div class="bg-white rounded-lg border-2 border-purple-200 p-4">
            <h3 class="font-semibold text-gray-900 mb-2">Split Decision</h3>
            <p class="text-sm text-gray-600 mb-3">
              Default: 50/50 split
            </p>
            <%= form_with url: resolve_split_madmin_dispute_path(@record), method: :post, class: "space-y-3" do |f| %>
              <div>
                <label class="text-xs text-gray-600">Seller Percentage</label>
                <%= f.number_field :seller_percentage,
                                   value: 50,
                                   min: 0,
                                   max: 100,
                                   class: "w-full px-3 py-1 border border-gray-300 rounded text-sm" %>
              </div>
              <%= f.submit "Split Funds",
                          data: { turbo_confirm: "Are you sure you want to split the funds?" },
                          class: "w-full bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 text-sm font-medium" %>
            <% end %>
          </div>
        </div>

        <div class="mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded">
          <p class="text-sm text-yellow-800">
            <strong>⚠️ Warning:</strong> Resolution actions are final and will immediately process refunds/payouts through Stripe.
          </p>
        </div>
      </div>
    <% elsif @record.status == 'resolved' %>
      <div class="px-6 py-4 bg-green-50">
        <h2 class="text-lg font-semibold text-green-900 mb-2">Dispute Resolved</h2>
        <p class="text-sm text-green-700">
          This dispute was resolved on <%= @record.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          <% if @record.resolved_by %>
            by <%= @record.resolved_by.email %>
          <% end %>
        </p>
        <% if @record.resolution_data.present? %>
          <p class="text-sm text-green-700 mt-1">
            Resolution: <%= @record.resolution_data.inspect %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Audit Log -->
  <% if @record.trade.audit_logs.any? %>
    <div class="mt-6 bg-white shadow-sm rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Activity Log</h2>
      </div>
      <div class="px-6 py-4">
        <div class="space-y-3">
          <% @record.trade.audit_logs.order(created_at: :desc).limit(20).each do |log| %>
            <div class="text-sm">
              <span class="text-gray-500"><%= log.created_at.strftime("%b %d, %I:%M %p") %></span>
              <span class="text-gray-700">- <%= log.action.humanize %></span>
              <% if log.from_state && log.to_state %>
                <span class="text-gray-600">(<%= log.from_state %> → <%= log.to_state %>)</span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
